        install:jboss:ncimbrowser-webapp:re-configure,
        install:jboss:ncimbrowser-webapp,
        install:jboss:ncimbrowser-webapp:configure,
        upgrade:post:jboss,
        install:post:jboss,
        install:jboss:start,
        install:jboss:validation:post-install
        ">
